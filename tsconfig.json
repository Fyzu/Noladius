{
  "compilerOptions": {
    "lib": ["es2017"],
    "baseUrl": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "pretty": true,
    "outDir": "lib",
    "rootDir": "src",
    "target": "es6",
    "sourceMap": false,
    "declaration": true,
    "typeRoots" : [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
